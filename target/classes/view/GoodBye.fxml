<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.effect.DropShadow?>

<AnchorPane prefHeight="300.0" prefWidth="400.0" style="-fx-background-color: linear-gradient(to bottom, #BBDEFB, #90CAF9);" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.pahasarastudiofp.controller.GoodbyeController">
    <children>
        <Label layoutX="0.0" layoutY="80.0" alignment="CENTER" prefHeight="50.0" prefWidth="400.0"
               text="Thank You &amp; Goodbye!" textAlignment="CENTER"
               style="-fx-text-fill: #1976D2; -fx-font-weight: bold;">
            <font>
                <Font size="28.0" />
            </font>
            <effect>
                <DropShadow color="#00000033" radius="5" />
            </effect>
        </Label>
        <Label layoutX="0.0" layoutY="140.0" alignment="CENTER" prefHeight="30.0" prefWidth="400.0"
               text="We hope to see you again soon!" textAlignment="CENTER"
               style="-fx-text-fill: #2196F3;">
            <font>
                <Font size="16.0" />
            </font>
        </Label>
        <Button fx:id="btnOk" layoutX="150.0" layoutY="210.0" mnemonicParsing="false" text="OK" onAction="#handleOkButton"
                prefWidth="100.0" prefHeight="40.0"
                style="-fx-background-color: #42A5F5; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16px; -fx-background-radius: 20; -fx-cursor: hand;">
            <effect>
                <DropShadow color="#42A5F580" radius="5" spread="0.2" />
            </effect>
        </Button>
    </children>
</AnchorPane>