<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: linear-gradient(to bottom right, #ADD8E6, #6A5ACD);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.pahasarastudiofp.controller.PaymentDetailsPageController">
    <children>
        <GridPane hgap="15" style="-fx-background-color: transparent;" vgap="15" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0" AnchorPane.topAnchor="70.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="100.0" prefWidth="120.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="250.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="100.0" prefWidth="120.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="250.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="40.0" prefHeight="40.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="40.0" prefHeight="40.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="40.0" prefHeight="40.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Label style="-fx-font-weight: 600; -fx-font-size: 14px; -fx-text-fill: #FFFFFF;" text="Appointment:" />
                <ComboBox fx:id="cmbAppointmentId" prefWidth="250.0" promptText="Select Appointment" style="-fx-background-color: white; -fx-text-fill: #333333; -fx-border-color: #D3D3D3; -fx-border-radius: 8; -fx-background-radius: 8; -fx-font-size: 14px;" GridPane.columnIndex="1" />
                <Label style="-fx-font-weight: 600; -fx-font-size: 14px; -fx-text-fill: #FFFFFF;" text="Amount:" GridPane.rowIndex="1" />
                <TextField fx:id="txtAmount" promptText="Enter amount" style="-fx-background-color: white; -fx-text-fill: #333333; -fx-border-color: #D3D3D3; -fx-border-radius: 8; -fx-background-radius: 8; -fx-padding: 0 10 0 10; -fx-font-size: 14px;" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            </children>
        </GridPane>

        <HBox alignment="CENTER_LEFT" spacing="15.0" AnchorPane.leftAnchor="30.0" AnchorPane.topAnchor="210.0" />

        <TableView fx:id="tblPayments" style="-fx-background-color: white; -fx-background-radius: 12; -fx-border-color: #D3D3D3; -fx-border-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.07), 5,0,0,1);" AnchorPane.bottomAnchor="27.0" AnchorPane.leftAnchor="27.0" AnchorPane.rightAnchor="27.0" AnchorPane.topAnchor="280.0">
            <columns>
                <TableColumn fx:id="colPaymentId" prefWidth="75.0" text="ID" />
                <TableColumn fx:id="colAppointmentId" prefWidth="120.0" text="Appointment ID" />
                <TableColumn fx:id="colAppointmentName" prefWidth="200.0" text="Appointment Name" />
                <TableColumn fx:id="colAmount" prefWidth="140.0" text="Amount" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>

        <Label layoutX="30.0" layoutY="20.0" style="-fx-font-size: 18px; -fx-font-weight: 700; -fx-text-fill: #FFFFFF;" text="Payment Details" />
        <Label layoutX="27.0" layoutY="222.0" style="-fx-font-size: 18px; -fx-font-weight: 700; -fx-text-fill: #FFFFFF;" text="Payment Table" />
        <Button fx:id="btnResetPayment" layoutX="656.0" layoutY="218.0" mnemonicParsing="false" onAction="#btnResetOnAction" style="-fx-background-color: #78909C; -fx-text-fill: white; -fx-background-radius: 12; -fx-padding: 8 20 8 20; -fx-font-weight: 600; -fx-cursor: hand;" text="Reset">
            <effect>
                <DropShadow color="#546E7A" radius="6" />
            </effect>
        </Button>
        <Button fx:id="btnDeletePayment" layoutX="552.0" layoutY="219.0" mnemonicParsing="false" onAction="#btnDeleteOnAction" style="-fx-background-color: #F44336; -fx-text-fill: white; -fx-background-radius: 12; -fx-padding: 8 20 8 20; -fx-font-weight: 600; -fx-cursor: hand;" text="Delete">
            <effect>
                <DropShadow color="#D32F2F" radius="6" />
            </effect>
        </Button>
        <Button fx:id="btnUpdatePayment" layoutX="449.0" layoutY="219.0" mnemonicParsing="false" onAction="#btnUpdateOnAction" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-background-radius: 12; -fx-padding: 8 20 8 20; -fx-font-weight: 600; -fx-cursor: hand;" text="Update">
            <effect>
                <DropShadow color="#1976D2" radius="6" />
            </effect>
        </Button>
        <Button fx:id="btnSavePayment" layoutX="360.0" layoutY="219.0" mnemonicParsing="false" onAction="#btnSaveOnAction" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 12; -fx-padding: 8 20 8 20; -fx-font-weight: 600; -fx-cursor: hand;" text="Save">
            <effect>
                <DropShadow color="#388E3C" radius="6" />
            </effect>
        </Button>
    </children>
</AnchorPane>
