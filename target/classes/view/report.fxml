<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Label?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #f0f2f5;"
            xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="lk.ijse.pahasarastudiofp.controller.reportcontroller">
    <children>
        <Label layoutX="14.0" layoutY="14.0" text="Report Viewer" textFill="#333333">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>
        <Label layoutX="14.0" layoutY="50.0" text="Your report will open in a separate window." textFill="#666666">
            <font>
                <Font size="14.0" />
            </font>
        </Label>
        <AnchorPane fx:id="reportPane" layoutX="14.0" layoutY="90.0" prefHeight="280.0" prefWidth="572.0"
                    style="-fx-background-color: white; -fx-border-color: #cccccc; -fx-border-width: 1px; -fx-background-radius: 5; -fx-border-radius: 5;"
                    AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="14.0" AnchorPane.rightAnchor="14.0" AnchorPane.topAnchor="90.0">
            <padding>
                <Insets/>
            </padding>
            <children>
                <Label layoutX="200.0" layoutY="120.0" text="Loading Report..." textFill="#999999">
                    <font>
                        <Font size="18.0" />
                    </font>
                </Label>
            </children>
        </AnchorPane>
    </children>
</AnchorPane>