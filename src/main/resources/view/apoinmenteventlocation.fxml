<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.pahasarastudiofp.controller.AppointmentEventLocationController">
    <children>
        <GridPane layoutX="31.0" layoutY="31.0" prefHeight="113.0" prefWidth="539.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Label text="Location Name:" />
                <TextField fx:id="txtLocationName" GridPane.columnIndex="1" />
                <Label text="Address:" GridPane.rowIndex="1" />
                <TextField fx:id="txtAddress" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            </children>
        </GridPane>
        <HBox layoutX="35.0" layoutY="162.0" spacing="10.0">
            <children>
                <Button fx:id="btnSaveLocation" mnemonicParsing="false" text="Save" onAction="#btnSaveLocationOnAction" />
                <Button fx:id="btnUpdateLocation" mnemonicParsing="false" text="Update" onAction="#btnUpdateLocationOnAction" />
                <Button fx:id="btnDeleteLocation" mnemonicParsing="false" text="Delete" onAction="#btnDeleteLocationOnAction" />
                <Button fx:id="btnResetLocation" mnemonicParsing="false" text="Reset" onAction="#btnResetLocationOnAction" />
            </children>
        </HBox>
        <TableView fx:id="tblLocations" layoutX="34.0" layoutY="212.0" prefHeight="200.0" prefWidth="539.0">
            <columns>
                <TableColumn fx:id="colLocationId" prefWidth="50.0" text="ID" />
                <TableColumn fx:id="colLocationName" prefWidth="150.0" text="Location Name" />
                <TableColumn fx:id="colAddress" prefWidth="300.0" text="Address" />
            </columns>
        </TableView>
    </children>
</AnchorPane>
